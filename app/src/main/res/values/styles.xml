<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Outlined button style with white border and transparent background (for black backgrounds) -->
    <style name="SimpleButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">#FFFFFF</item>
        <item name="strokeColor">#FFFFFF</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">#40FFFFFF</item>
    </style>

    <!-- Outlined button style with black border and black text (for white backgrounds) -->
    <style name="SimpleButtonBlack" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">#000000</item>
        <item name="strokeColor">#000000</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">#40000000</item>
    </style>

    <!-- Dialog theme with black text -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>
</resources>
